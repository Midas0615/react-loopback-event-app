{
  "name": "Contact",
  "plural": "contacts",
  "base": "Base",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    },
    "address1": {
      "type": "string"
    },
    "address2": {
      "type": "string"
    },
    "address3": {
      "type": "string"
    },
    "zip": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "organization": {
      "type": "string"
    },
    "deleted": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "events": {
      "type": "hasMany",
      "model": "Event",
      "foreignKey": "contactId",
      "through": "Invitation"
    },
    "contactGroup": {
      "type": "belongsTo",
      "model": "ContactGroup",
      "foreignKey": ""
    }
  },
  "acls": [
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {
    "sendEmail": {
      "accepts": [
        {
          "arg": "contactId",
          "type": "number",
          "required": true
        },
        {
          "arg": "emailTemplateId",
          "type": "number",
          "required": true
        }
      ],
      "returns": {
        "root": true
      },
      "description": "Send email to a contact.",
      "http": {
        "verb": "post",
        "path": "/:contactId/send-email"
      }
    }
  }
}
