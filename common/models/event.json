{
  "name": "Event",
  "plural": "events",
  "base": "Base",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "geolocation": {
      "type": "geopoint"
    },
    "comment": {
      "type": "string"
    },
    "eventDate": {
      "type": "date",
      "required": true
    },
    "eventLocation": {
      "type": "string"
    },
    "deleted": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "contacts": {
      "type": "hasMany",
      "model": "Contact",
      "foreignKey": "eventId",
      "through": "Invitation"
    }
  },
  "acls": [
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {
    "sendEmail": {
      "accepts": [
        {
          "arg": "id",
          "type": "number"
        },
        {
          "arg": "contactId",
          "type": "number",
          "required": true
        },
        {
          "arg": "emailTemplateId",
          "type": "number",
          "required": true
        },
        {
          "arg": "inviteId",
          "type": "string"
        }
      ],
      "returns": {
        "root": true
      },
      "description": "Send emails to all Contacts that attend an event.",
      "http": {
        "verb": "post",
        "path": "/:id/contacts/:contactId/send-email"
      }
    },
    "sendEmails": {
      "accepts": [
        {
          "arg": "id",
          "type": "number"
        },
        {
          "arg": "emailTemplateId",
          "type": "number",
          "required": true
        }
      ],
      "returns": {
        "root": true
      },
      "description": "Send emails to all Contacts that attend an event.",
      "http": {
        "verb": "post",
        "path": "/:id/contacts/send-emails"
      }
    }
  }
}
