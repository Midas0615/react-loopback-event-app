{
  "name": "Invitation",
  "plural": "invites",
  "base": "Base",
  "idInjection": false,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "uuidv4"
    },
    "status": {
      "type": "string",
      "default": "unconfirmed"
    },
    "emailConfirmation": {
      "type": "boolean",
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "contact": {
      "type": "belongsTo",
      "model": "Contact",
      "foreignKey": "contactId"
    },
    "event": {
      "type": "belongsTo",
      "model": "Event",
      "foreignKey": "eventId"
    }
  },
  "indexes": {
    "contactEventIdx": {
      "keys": {
         "contactId": 1,
         "eventId": 1
       },
       "options": {
         "unique": true
       }
    }
  },
  "acls": [],
  "methods": {
    "confirm": {
      "accepts": [
        {
          "arg": "inviteId",
          "type": "string",
          "required": true
        },
        {
          "arg": "status",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "arg": "data",
        "type": "string",
        "root": true
      },
      "http": {
        "verb": "get",
        "path": "/confirm",
        "errorStatus": "404"
      }
    }
  }
}
